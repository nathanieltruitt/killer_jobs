<ul>
  <% if current_user.nil? %>
    <li><%= link_to 'Login', new_user_session_path %></li>
    <li><%= link_to 'Sign Up', new_user_registration_path %></li>
    <li><%= link_to 'Company Sign Up', new_company_path %></li>
  <% else %>
  <% if current_user.role.name == 'company_admin' %>
    <li><%= link_to 'My Company', my_company_path %></li>
  <% end %>
  <li><%= link_to 'Companies', companies_path %></li>
  <li><%= link_to 'Logout', destroy_user_session_path, data: {'turbo-method': :delete} %></li>
  <% end %>
  <li><%= link_to 'Jobs', jobs_path %></li>


  <%# search component %>
  <li><%= render 'shared/search'%></li>
</ul>
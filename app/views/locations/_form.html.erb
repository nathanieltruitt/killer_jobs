<%= form_with model: @location do |form| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2>Unable to save due to <%= pluralize(@location.errors.count, 'error') %></h2>
    </div>
    <ul>
    <% @location.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.select :state, options_for_select(states) %>
  </div>

  <div class="field">
    <%= form.label :zip_code %>
    <%= form.text_field :zip_code %>
  </div>

  <%= form.submit %>
<% end %>